<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_reservation_graph"
    app:startDestination="@id/findNewGames">

    <fragment
        android:id="@+id/findNewGames"
        android:name="com.example.lab2.NewGames"
        android:label="fragment_new_games"
        tools:layout="@layout/fragment_new_games" >
    </fragment>
    <fragment
        android:id="@+id/fullScreenCalendar"
        android:name="com.example.lab2.calendar.MonthCalendar"
        android:label="fragment_full_screen_calendar"
        tools:layout="@layout/month_calendar_fragment">
        <action
            android:id="@+id/action_fullScreenCalendar_to_findNewGames"
            app:destination="@id/findNewGames"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_right"
            app:popUpTo="@id/findNewGames"
            app:popUpToInclusive="true" />
    </fragment>
    <action
        android:id="@+id/action_global_to_fullScreenCalendar"
        app:destination="@id/fullScreenCalendar"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left" />
</navigation>